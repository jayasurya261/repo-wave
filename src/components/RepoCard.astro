---
export interface Props {
    repo: any;
}
const { repo } = Astro.props;
---
<div data-type="repo" data-name={repo.name.toLowerCase()} data-lang={repo.language} class="bg-white rounded-xl shadow-sm border border-gray-200 p-5 hover:shadow-md transition-shadow">
    <div class="flex items-center justify-between mb-3">
        <h3 class="text-lg font-semibold text-gray-900 truncate">{repo.name}</h3>
        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
            {repo.language}
        </span>
    </div>
    <div class="text-sm text-gray-500 mb-4 flex items-center justify-between">
        <span class="truncate">{repo.full_name}</span>
        {repo.last_active && (
            <span class="text-xs px-2 py-0.5 rounded bg-gray-100 whitespace-nowrap" title="Last Active">
                Active: {new Date(repo.last_active).toLocaleDateString()}
            </span>
        )}
    </div>
    <div class="flex items-center gap-4 text-sm text-gray-600">
        <span class="flex items-center gap-1" title="Stars">
            <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
            {repo.stars.toLocaleString()}
        </span>
        <span class="flex items-center gap-1" title="Forks">
            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/></svg>
            {repo.forks.toLocaleString()}
        </span>
        {repo.health_score != null && (
            <span class={`ml-auto text-xs font-semibold px-2 py-0.5 rounded-full ${repo.health_score >= 75 ? 'bg-green-100 text-green-800' : repo.health_score >= 50 ? 'bg-yellow-100 text-yellow-800' : 'bg-red-100 text-red-800'}`}>
                Difficulty: {repo.health_score >= 75 ? 'Easy' : repo.health_score >= 50 ? 'Medium' : repo.health_score >= 25 ? 'Hard' : 'Very Hard'}
            </span>
        )}
    </div>
</div>
